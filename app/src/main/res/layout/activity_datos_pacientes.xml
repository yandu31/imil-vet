<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatosPacientes">

    <Button
        android:id="@+id/btnInsertar"
        android:layout_width="220dp"
        android:layout_height="85dp"
        android:text="@string/btnInsertar"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnModificar"
        app:layout_constraintEnd_toEndOf="@+id/btnModificar"
        app:layout_constraintStart_toStartOf="@+id/btnModificar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.322" />

    <Button
        android:id="@+id/btnConsultar"
        android:layout_width="220dp"
        android:layout_height="85dp"
        android:text="@string/btnConsultar"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnModificar"
        app:layout_constraintEnd_toEndOf="@+id/btnModificar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnModificar"
        app:layout_constraintTop_toBottomOf="@+id/btnInsertar" />

    <Button
        android:id="@+id/btnModificar"
        android:layout_width="220dp"
        android:layout_height="85dp"
        android:text="@string/btnModificar"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAbrirCam"
        android:layout_width="220dp"
        android:layout_height="85dp"
        android:text="@string/btnEliminar"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnBackToMain"
        app:layout_constraintEnd_toEndOf="@+id/btnModificar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnModificar"
        app:layout_constraintTop_toBottomOf="@+id/btnModificar" />

    <Button
        android:id="@+id/btnBackToMain"
        android:layout_width="220dp"
        android:layout_height="85dp"
        android:onClick="goToMain"
        android:text="@string/btnBackToMain"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnModificar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnModificar"
        app:layout_constraintTop_toBottomOf="@+id/btnModificar"
        app:layout_constraintVertical_bias="0.66" />

</androidx.constraintlayout.widget.ConstraintLayout>